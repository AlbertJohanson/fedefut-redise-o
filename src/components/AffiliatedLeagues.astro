---
import ligas from '../data/ligas-afiliadas.json';
import LeaguesCard from './LeaguesCard.astro';
---

<section class="ligas-afiliadas" id="ligas">
  <div class="ligas-bg">
    <div class="ligas-pattern"></div>
    <div class="ligas-gradient"></div>
    <div class="ligas-shapes">
      <div class="ligas-shape ligas-shape-1"></div>
      <div class="ligas-shape ligas-shape-2"></div>
      <div class="ligas-shape ligas-shape-3"></div>
    </div>
  </div>

  <div class="afiliadas-container">
    <div class="ligas-header">
      <span class="section-badge">Competiciones Oficiales</span>
      <h2 class="section-title">Ligas Afiliadas</h2>
      <p class="ligas-description">
        Las competiciones oficiales que conforman el sistema de f√∫tbol
        guatemalteco
      </p>
    </div>

    <div class="ligas-grid">
        {
            ligas.categorias.map((liga) => (
                <LeaguesCard id={liga.id} nombre={liga.nombre} equipos={liga.equipos} logoLiga={liga.logoLiga} campeon={liga.campeon}/>
            ))
        }
    </div>
  </div>
</section>

<script></script>
<style>
  .ligas-afiliadas {
    position: relative;
    padding: var(--space-20) 0;
    background: linear-gradient(
      180deg,
      var(--color-white) 0%,
      var(--color-gray-100) 100%
    );
    overflow: hidden;
  }

  .ligas-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    overflow: hidden;
  }

  .ligas-pattern {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(
      circle at 1px 1px,
      rgba(0, 56, 118, 0.04) 1px,
      transparent 0
    );
    background-size: 40px 40px;
  }

  .ligas-gradient {
    position: absolute;
    top: -200px;
    right: -100px;
    width: 500px;
    height: 500px;
    background: radial-gradient(
      circle,
      rgba(73, 151, 208, 0.15) 0%,
      transparent 70%
    );
    filter: blur(60px);
  }

  .ligas-shapes {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .ligas-shape {
    position: absolute;
    opacity: 0.08;
  }

  .ligas-shape-1 {
    width: 200px;
    height: 200px;
    border: 3px solid var(--color-primary);
    border-radius: 50%;
    top: 10%;
    left: 5%;
    animation: floatSlow 15s ease-in-out infinite;
  }

  .ligas-shape-2 {
    width: 120px;
    height: 120px;
    border: 3px solid var(--color-secondary);
    top: 60%;
    right: 8%;
    transform: rotate(45deg);
    animation: floatSlow 12s ease-in-out infinite reverse;
  }

  .ligas-shape-3 {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--color-accent), transparent);
    border-radius: 50%;
    bottom: 20%;
    left: 15%;
    animation: floatSlow 18s ease-in-out infinite;
  }

  .afiliadas-container {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-6);
  }

  .ligas-header {
    position: relative;
    z-index: 2;
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .section-badge {
    display: inline-block;
    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-secondary);
    background: linear-gradient(
      135deg,
      rgba(0, 102, 204, 0.1),
      rgba(73, 151, 208, 0.15)
    );
    padding: var(--space-2) var(--space-5);
    border-radius: 30px;
    margin-bottom: var(--space-4);
    border: 1px solid rgba(0, 102, 204, 0.15);
  }

  .ligas-header .section-title {
    font-family: var(--font-display);
    font-size: 3.5rem;
    color: var(--color-primary);
    margin-bottom: var(--space-4);
    letter-spacing: 0.02em;
  }

  .ligas-description {
    font-size: 1.0625rem;
    color: var(--color-gray-500);
    line-height: 1.7;
    max-width: 550px;
    margin: 0 auto;
  }

  .ligas-grid {
    position: relative;
    z-index: 2;
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: var(--space-5);
}

@media (max-width: 1400px) {
    .ligas-grid {
        grid-template-columns: repeat(4, 1fr);
    }

    .liga-card:nth-child(5),
    .liga-card:nth-child(6),
    .liga-card:nth-child(7) {
        grid-column: span 1;
    }
}

@media (max-width: 1100px) {
    .ligas-grid {
        grid-template-columns: repeat(3, 1fr);
    }

    .liga-card:last-child {
        grid-column: span 1;
    }
}

@media (max-width: 900px) {
    .ligas-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: var(--space-4);
    }

    .ligas-header .section-title {
        font-size: 2.5rem;
    }

    .liga-card-inner {
        padding: var(--space-6) var(--space-4);
    }

    .liga-logo-placeholder {
        width: 70px;
        height: 70px;
    }

    .liga-logo-placeholder svg {
        width: 32px;
        height: 32px;
    }
}

@media (max-width: 600px) {
    .ligas-afiliadas {
        padding: var(--space-16) 0;
    }

    .ligas-header .section-title {
        font-size: 2rem;
    }

    .ligas-description {
        font-size: 0.9375rem;
    }

    .ligas-grid {
        grid-template-columns: 1fr;
        gap: var(--space-4);
    }

    .liga-card-inner {
        flex-direction: row;
        text-align: left;
        padding: var(--space-5);
        gap: var(--space-4);
    }

    .liga-logo-container {
        margin-bottom: 0;
    }

    .liga-logo-bg {
        display: none;
    }

    .liga-logo-placeholder {
        width: 60px;
        height: 60px;
    }

    .liga-logo-placeholder svg {
        width: 28px;
        height: 28px;
    }

    .liga-info {
        margin-bottom: 0;
        flex: 1;
    }

    .liga-champion {
        width: auto;
        flex-shrink: 0;
        padding: var(--space-3);
    }

    .champion-info {
        display: none;
    }

    .champion-icon {
        width: 36px;
        height: 36px;
    }

    .champion-icon svg {
        width: 18px;
        height: 18px;
    }
</style>
