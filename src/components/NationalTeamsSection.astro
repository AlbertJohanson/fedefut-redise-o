          </div>

          <div class="card-border"></div>
        </div>
      </article>
    </div>
  </div>
</section>

<style>
  .national-teams-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .national-teams-subtitle {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-secondary);
    margin-bottom: var(--space-2);
  }

  .national-teams-title {
    font-family: var(--font-display);
    font-size: 3rem;
    letter-spacing: 0.05em;
    color: var(--blue-700);
  }

  .national-teams-title::after {
    content: "";
    display: block;
    width: 80px;
    height: 4px;
    background: linear-gradient(
      to right,
      var(--color-primary),
      var(--color-accent)
    );
    margin: var(--space-4) auto 0;
    border-radius: 2px;
  }

  .national-teams-header.light .section-subtitle {
    color: var(--color-accent);
  }

  .national-teams-header.light .section-title {
    color: var(--color-white);
  }

  .national-teams-header.light .section-title::after {
    background: linear-gradient(
      to right,
      var(--color-accent),
      var(--color-white)
    );
  }

  .national-teams-section {
    position: relative;
    padding: var(--space-24) var(--space-24);
    background: var(--color-white);
    overflow: hidden;
  }

  .national-teams-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image:
      radial-gradient(
        ellipse 80% 50% at 20% 0%,
        rgba(73, 151, 208, 0.08) 0%,
        transparent 50%
      ),
      radial-gradient(
        ellipse 60% 40% at 80% 100%,
        rgba(0, 102, 204, 0.05) 0%,
        transparent 50%
      );
    pointer-events: none;
  }

  .national-teams-section::after {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120%;
    height: 120%;
    background-image: radial-gradient(
      circle at center,
      transparent 30%,
      rgba(0, 56, 118, 0.02) 30%,
      rgba(0, 56, 118, 0.02) 32%,
      transparent 32%
    );
    background-size: 100% 100%;
    pointer-events: none;
    opacity: 0.5;
  }

  .national-teams-section .container {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-6);
    position: relative;
    z-index: 1;
  }

  .national-teams-section .national-teams-header {
    margin-bottom: var(--space-16);
  }

  .national-teams-section .national-teams-subtitle {
    color: var(--color-secondary);
  }

  .national-teams-section .national-teams-title {
    color: var(--blue-400);
    font-size: 3.5rem;
  }

  .national-teams-section .national-teams-title::after {
    background: linear-gradient(
      to right,
      var(--color-primary),
      var(--color-accent),
      var(--color-primary)
    );
  }

  .national-teams-nav {
    display: flex;
    justify-content: center;
    gap: var(--space-2);
    margin-bottom: var(--space-12);
    flex-wrap: wrap;
  }

  .national-teams-nav-btn {
    padding: var(--space-3) var(--space-6);
    font-family: var(--font-display);
    font-size: 0.9rem;
    letter-spacing: 0.1em;
    color: var(--color-gray-700);
    background: var(--color-white);
    border: 2px solid var(--color-gray-200);
    border-radius: 50px;
    cursor: pointer;
    transition: all var(--duration-normal) var(--ease-out);
    position: relative;
    overflow: hidden;
  }

  .national-teams-nav-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(0, 102, 204, 0.1),
      transparent
    );
    transition: left 0.5s ease;
  }

  .national-teams-nav-btn:hover::before {
    left: 100%;
  }

  .national-teams-nav-btn:hover {
    color: var(--color-primary);
    border-color: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 102, 204, 0.15);
  }

  .national-teams-nav-btn.active {
    color: var(--color-white);
    background: linear-gradient(
      135deg,
      var(--color-secondary),
      var(--color-primary)
    );
    border-color: transparent;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 102, 204, 0.3);
  }

  .national-teams-grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    grid-template-rows: repeat(2, 280px);
    gap: var(--space-5);
  }

  .national-teams-card {
    position: relative;
    border-radius: 24px;
    overflow: hidden;
    cursor: pointer;
    box-shadow: 0 10px 40px rgba(0, 56, 118, 0.15);
  }

  .national-teams-card:nth-child(1) {
    grid-column: span 5;
  }
  .national-teams-card:nth-child(2) {
    grid-column: span 4;
  }
  .national-teams-card:nth-child(3) {
    grid-column: span 3;
  }
  .national-teams-card:nth-child(4) {
    grid-column: span 4;
  }
  .national-teams-card:nth-child(5) {
    grid-column: span 8;
  }

  /* Card inner container */
  .card-inner {
    position: relative;
    width: 100%;
    height: 100%;
  }

  /* Background image container */
  .card-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* Placeholder backgrounds with unique gradients */
  .card-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .card-placeholder img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  /* Gradient overlay */
  .card-gradient-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      180deg,
      transparent 0%,
      transparent 30%,
      rgba(0, 0, 0, 0.4) 70%,
      rgba(0, 0, 0, 0.85) 100%
    );
  }

  /* Glow - disabled */
  .card-glow {
    display: none;
  }

  /* Card border */
  .card-border {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: 1px solid rgba(0, 56, 118, 0.1);
    border-radius: 24px;
    pointer-events: none;
  }

  /* Content area */
  .card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--space-6);
    padding-bottom: var(--space-8);
  }

  /* Title */
  .card-title {
    font-family: var(--font-display);
    font-size: 1.75rem;
    letter-spacing: 0.02em;
    color: var(--color-white);
    margin-bottom: var(--space-2);
    line-height: 1.1;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    transition: transform 0.4s ease;
  }

  .national-teams-card:hover .card-title {
    transform: translateY(-2px);
  }

  .national-teams-card:hover .card-content {
    background: linear-gradient(
      180deg,
      rgba(0, 102, 204, 0) 0%,
      rgba(0, 102, 204, 0.2) 30%,
      rgba(0, 102, 204, 0.4) 70%,
      rgba(0, 102, 204, 0.85) 100%
    );
  }

  .national-teams-card:nth-child(1) .card-title,
  .national-teams-card:nth-child(5) .card-title {
    font-size: 2.25rem;
  }

  /* Description */
  .card-description {
    font-size: 0.9rem;
    color: var(--color-white);
    margin-bottom: var(--space-4);
    line-height: 1.5;
    max-width: 90%;
    opacity: 0;
    transform: translateY(8px);
    transition:
      opacity 0.4s ease,
      transform 0.4s ease;
  }

  .national-teams-card:hover .card-description {
    opacity: 1;
    transform: translateY(0);
  }

  /* Stats row */
  .card-stats {
    display: flex;
    gap: var(--space-6);
    margin-bottom: var(--space-4);
    opacity: 0;
    transform: translateY(8px);
    transition:
      opacity 0.4s ease 0.05s,
      transform 0.4s ease 0.05s;
  }

  .national-teams-card:hover .card-stats {
    opacity: 1;
    transform: translateY(0);
  }

  .stat-mini {
    display: flex;
    flex-direction: column;
  }

  .stat-mini-value {
    font-family: var(--font-display);
    font-size: 1.5rem;
    color: var(--color-white);
    line-height: 1;
  }

  .stat-mini-label {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* CTA Link */
  .card-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-white);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: var(--space-3) var(--space-4);
    padding-left: 0;
    position: relative;
    transition: all var(--duration-normal) var(--ease-out);
  }

  .card-link:hover {
    color: var(--color-accent);
  }

  .card-link .arrow {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 50%;
    transition: all var(--duration-normal) var(--ease-out);
  }

  .card-link .arrow svg {
    width: 14px;
    height: 14px;
    stroke: currentColor;
    stroke-width: 2;
    fill: none;
  }

  .card-link:hover .arrow {
    background: var(--color-accent);
    transform: translateX(4px);
  }

  .card-link:hover .arrow svg {
    stroke: var(--color-dark);
  }

  .card-shine {
    display: none;
  }

  /* ========================================
   SELECCIONES RESPONSIVE STYLES
   ======================================== */
  @media (max-width: 1200px) {
    .national-teams-grid {
      grid-template-rows: repeat(3, 240px);
    }

    .national-teams-card:nth-child(1) {
      grid-column: span 6;
    }
    .national-teams-card:nth-child(2) {
      grid-column: span 6;
    }
    .national-teams-card:nth-child(3) {
      grid-column: span 4;
    }
    .national-teams-card:nth-child(4) {
      grid-column: span 4;
    }
    .national-teams-card:nth-child(5) {
      grid-column: span 4;
    }
  }

  @media (max-width: 900px) {
    .national-teams-grid {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: auto;
    }

    .national-teams-card:nth-child(1),
    .national-teams-card:nth-child(2),
    .national-teams-card:nth-child(3),
    .national-teams-card:nth-child(4),
    .national-teams-card:nth-child(5) {
      grid-column: span 1;
      min-height: 280px;
    }

    .national-teams-card:nth-child(5) {
      grid-column: span 2;
    }

    .card-title {
      font-size: 1.5rem !important;
    }

    .card-description {
      opacity: 1;
      transform: translateY(0);
    }

    .card-stats {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 600px) {
    .national-teams {
      padding: var(--space-16) 0;
    }

    .national-teams .national-teams-title {
      font-size: 2.25rem;
    }

    .national-teams-teams-nav {
      gap: var(--space-2);
      padding: 0 var(--space-2);
    }

    .national-teams-nav-btn {
      padding: var(--space-2) var(--space-4);
      font-size: 0.75rem;
    }

    .national-teams-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .national-teams-card:nth-child(1),
    .national-teams-card:nth-child(2),
    .national-teams-card:nth-child(3),
    .national-teams-card:nth-child(4),
    .national-teams-card:nth-child(5) {
      grid-column: span 1;
      min-height: 240px;
    }

    .card-content {
      padding: var(--space-5);
      padding-bottom: var(--space-6);
    }

    .card-description {
      opacity: 1;
      transform: translateY(0);
      font-size: 0.75rem;
    }

    .card-stats {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* ========================================
   RESPONSIVE - TABLET
   ======================================== */
  @media (max-width: 1024px) {
    .national-teams-grid {
      grid-template-rows: repeat(3, 240px);
    }

    .national-teams-card:nth-child(1) {
      grid-column: span 6;
    }
    .national-teams-card:nth-child(2) {
      grid-column: span 6;
    }
    .national-teams-card:nth-child(3) {
      grid-column: span 4;
    }
    .national-teams-card:nth-child(4) {
      grid-column: span 4;
    }
    .national-teams-card:nth-child(5) {
      grid-column: span 4;
    }
  }

  /* ========================================
   RESPONSIVE - MOBILE
   ======================================== */
  @media (max-width: 768px) {
    .national-teams-title {
      font-size: 2rem;
    }

    .national-teams-section {
      padding: var(--space-12) var(--space-3);
    }

    .national-teams-grid {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
    }

    .national-teams-card:nth-child(1),
    .national-teams-card:nth-child(2),
    .national-teams-card:nth-child(3),
    .national-teams-card:nth-child(4),
    .national-teams-card:nth-child(5) {
      grid-column: span 1;
      min-height: 260px;
    }

    .card-description {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
