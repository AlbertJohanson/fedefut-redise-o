<script>
     const headerMain = document.querySelector(".header-fg");

      function handleScroll() {
        if (window.scrollY > 50) {
          headerMain?.classList.add("scrolled");
        } else {
          headerMain?.classList.remove("scrolled");
        }
      }

      window.addEventListener("scroll", handleScroll);
      handleScroll();
</script>

<style>
  .top-bar-fg {
    background-color: var(--slate-900);
    border-bottom: 1px solid var(--slate-800);
  }

  .top-bar-container-fg {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0.5rem 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .top-bar-container-fg .organizations {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 1.5rem;
  }

  .organizations .org-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--slate-400);
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .org-link .org-icon {
    width: 2rem;
    height: 2rem;
    background-color: var(--slate-800);
    border-radius: 0.375rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.625rem;
    font-weight: 700;
  }

  .org-icon img {
    width: 100%;
    height: auto;
  }

  .organizations .org-link:hover {
    color: #ffffff;
  }

  .org-name {
    display: none;
  }

  @media (min-width: 640px) {
    .org-name {
      display: inline;
    }
  }

  .social-media-links {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .social-media-links .social-link {
    width: 2rem;
    height: 2rem;
    background-color: var(--slate-800);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .social-media-links .social-link:hover {
    background-color: var(--blue-600);
    transform: scale(1.1);
  }

  .social-link svg {
    width: 1rem;
    height: 1rem;
    fill: var(--slate-400);
    transition: fill 0.3s ease;
  }

  .social-link:hover svg {
    fill: #ffffff;
  }

  .header-fg {
    background: transparent;
    transition: all var(--duration-normal) var(--ease-out);
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: var(--z-sticky);
  }

  .header-fg.scrolled {
    background: var(--color-primary);
    box-shadow: var(--shadow-lg);
  }

  .header-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-6);
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80px;
  }

  .header-fg-left,
  .header-fg-right {
    display: flex;
    align-items: center;
    gap: var(--space-8);
    flex: 1;
  }

  .header-fg-right {
    justify-content: flex-end;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-family: var(--font-body);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-white);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: var(--space-2) 0;
    position: relative;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .nav-link::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-accent);
    transition: width var(--duration-normal) var(--ease-out);
  }

  .nav-link:hover::after,
  .nav-item.active .nav-link::after {
    width: 100%;
  }

  .nav-arrow {
    width: 16px;
    height: 16px;
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .nav-item.has-megamenu:hover .nav-arrow {
    transform: rotate(180deg);
  }

  .logo {
    flex-shrink: 0;
    margin: 0 var(--space-8);
    z-index: 10;
  }

  .logo-container {
    width: 130px;
    height: 138px;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
    transition: transform var(--duration-normal) var(--ease-out);
  }

  .logo-container img {
    width: 100%;
    height: auto;
  }

  .logo:hover .logo-container img {
    transform: scale(1.05);
  }

  .logo-text {
    font-family: var(--font-display);
    font-size: 1.25rem;
    letter-spacing: 0.2em;
    color: var(--color-white);
    transition: color var(--duration-normal) var(--ease-out);
  }

  .mega-menu {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(10px);
    width: 900px;
    background: var(--color-white);
    border-radius: 12px;
    box-shadow: var(--shadow-xl);
    opacity: 0;
    visibility: hidden;
    transition: all var(--duration-normal) var(--ease-out);
    pointer-events: none;
  }

  .nav-item.has-megamenu:hover .mega-menu {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
    pointer-events: auto;
  }

  .mega-menu-inner {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-6);
    padding: var(--space-8);
  }

  .mega-column {
    min-width: 0;
  }

  .mega-title {
    font-family: var(--font-display);
    font-size: 1rem;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: var(--space-4);
    padding-bottom: var(--space-2);
    border-bottom: 2px solid var(--color-accent);
  }

  .mega-list li {
    margin-bottom: var(--space-2);
  }

  .mega-list a {
    font-size: 0.9rem;
    color: var(--color-gray-700);
    padding: var(--space-2) 0;
    display: block;
    transition: all var(--duration-fast) var(--ease-out);
  }

  .mega-list a:hover {
    color: var(--color-primary);
    padding-left: var(--space-2);
  }

  .mega-featured {
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
    border-radius: 8px;
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .mega-featured-label {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    margin-bottom: var(--space-2);
  }

  .mega-featured-title {
    font-family: var(--font-display);
    font-size: 1.5rem;
    color: var(--color-white);
    margin-bottom: var(--space-2);
  }

  .mega-featured-text {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--space-4);
  }

  .mega-featured-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-accent);
  }

  .mobile-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: var(--color-primary);
    transform: translateX(100%);
    transition: transform var(--duration-slow) var(--ease-out);
    z-index: 1000;
    overflow-y: auto;
  }

  .mobile-nav.active {
    transform: translateX(0);
  }

  .mobile-nav-inner {
    padding: 120px var(--space-6) var(--space-8);
  }

  .mobile-menu > li {
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .mobile-menu > li > a,
  .mobile-menu .submenu-toggle {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-5) 0;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-white);
  }

  .mobile-menu .submenu-toggle svg {
    width: 20px;
    height: 20px;
    transition: transform var(--duration-normal) var(--ease-out);
  }

  .mobile-menu .has-submenu.active .submenu-toggle svg {
    transform: rotate(180deg);
  }

  .mobile-submenu {
    max-height: 0;
    overflow: hidden;
    transition: max-height var(--duration-normal) var(--ease-out);
  }

  .has-submenu.active .mobile-submenu {
    max-height: 600px;
  }

  .mobile-submenu li {
    padding-left: var(--space-4);
  }

  .mobile-submenu a {
    display: block;
    padding: var(--space-3) 0;
    color: rgba(255, 255, 255, 0.8);
    font-size: 1rem;
  }

  .submenu-title {
    display: block;
    padding: var(--space-4) 0 var(--space-2);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
  }

  .hamburger {
    display: none;
    flex-direction: column;
    justify-content: center;
    gap: 6px;
    width: 40px;
    height: 40px;
    padding: var(--space-2);
    z-index: 1001;
    background-color: transparent;
    border: none;
  }

  .hamburger-line {
    width: 100%;
    height: 2px;
    background: var(--color-white);
    border-radius: 2px;
    transition: all var(--duration-normal) var(--ease-out);
    transform-origin: center;
  }

  .hamburger.active .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
  }

  .hamburger.active .hamburger-line:nth-child(2) {
    opacity: 0;
    transform: scaleX(0);
  }

  .hamburger.active .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
  }

  @media (max-width: 1024px) {
    .header-fg-left,
    .header-fg-right {
      display: none;
    }

    .hamburger {
      display: flex;
    }

    .logo-container {
      margin-top: 40px;
    }

    .nav-inner {
      justify-content: space-between;
    }

    .mega-menu {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .top-bar-inner {
      padding: 0 var(--space-4);
    }

    .organizations {
      gap: var(--space-3);
    }

    .org-logo {
      font-size: 0.75rem;
    }

    .social-icons {
      gap: var(--space-1);
    }

    .social-icon {
      width: 28px;
      height: 28px;
    }

    .social-icon svg {
      width: 14px;
      height: 14px;
    }

    .nav-inner {
      height: 70px;
      padding: 0 var(--space-4);
    }

    .logo-container {
      margin-top: 40px;
    }

    .match-card {
      padding: var(--space-6);
      border-radius: 16px;
    }

    .match-teams {
      flex-direction: column;
      gap: var(--space-4);
    }

    .team {
      flex-direction: row;
      gap: var(--space-4);
    }

    .team-shield-container {
      width: 60px;
      height: 70px;
    }

    .team-code {
      font-size: 1.5rem;
    }

    .match-vs {
      flex-direction: row;
      width: 100%;
      justify-content: center;
      gap: var(--space-4);
    }

    .vs-circle {
      width: 50px;
      height: 50px;
    }

    .match-datetime {
      text-align: left;
    }

    .countdown-number {
      font-size: 2rem;
    }

    .countdown-block {
      min-width: 50px;
    }

    .countdown-separator {
      font-size: 1.5rem;
      margin-bottom: 15px;
    }

    .scroll-indicator {
      display: none;
    }

    .section-title {
      font-size: 2rem;
    }

    .selecciones,
    .noticias,
    .partidos,
    .estadisticas,
    .patrocinadores {
      padding: var(--space-12) 0;
    }

    .selecciones-grid {
      grid-template-columns: 1fr;
    }

    .noticia-card {
      flex: 0 0 100%;
    }

    .carousel-container {
      flex-direction: column;
      gap: var(--space-4);
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-4);
    }

    .stat-number {
      font-size: 2.5rem;
    }

    .stat-item {
      padding: var(--space-6);
    }

    .footer-grid {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .footer-logo {
      justify-content: center;
    }

    .footer-social {
      justify-content: center;
    }

    .footer-title {
      display: block;
    }

    .footer-contact li {
      justify-content: center;
    }

    .timeline-item {
      flex-direction: column;
      gap: var(--space-3);
    }

    .timeline-date {
      width: 100%;
    }

    .partidos-timeline::before {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .container {
