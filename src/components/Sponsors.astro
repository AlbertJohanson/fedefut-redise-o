---
import patrocinadores from "../data/patrocinadores.json";
---

<section class="sponsors" id="sponsors">
  <div class="sponsors-decor">
    <div class="sponsors-decor-line sponsors-decor-line-1"></div>
    <div class="sponsors-decor-line sponsors-decor-line-2"></div>
    <div class="sponsors-decor-dot sponsors-decor-dot-1"></div>
    <div class="sponsors-decor-dot sponsors-decor-dot-2"></div>
  </div>

  <div class="sponsors-container">
    <div class="sponsors-header">
      <div class="sponsors-header-content">
        <span class="sponsors-label">Empresas que confían en nosotros</span>
        <h2 class="sponsors-title">Patrocinadores Oficiales</h2>
        <p class="sponsors-desc">
          Juntos impulsamos el desarrollo del fútbol guatemalteco
        </p>
      </div>
    </div>

    <div class="sponsors-carousel">
      <div class="sponsors-track">
        {
          patrocinadores.map((patrocinador) => (
            <div class="sponsor-item">
              <div class="sponsor-logo">
                <img src={patrocinador.image} alt={patrocinador.alt} />
              </div>
            </div>
          ))
        }
        {
          patrocinadores.map((patrocinador) => (
            <div class="sponsor-item">
              <div class="sponsor-logo">
                <img src={patrocinador.image} alt={patrocinador.alt} />
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .sponsors {
    padding: var(--space-20) 0;
    background: #ffffff;
    position: relative;
    overflow: hidden;
  }

  .sponsors-decor {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    overflow: hidden;
  }

  .sponsors-decor-line {
    position: absolute;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(0, 56, 118, 0.06),
      transparent
    );
    height: 1px;
  }

  .sponsors-decor-line-1 {
    top: 25%;
    left: 0;
    width: 100%;
  }

  .sponsors-decor-line-2 {
    bottom: 30%;
    left: 0;
    width: 100%;
  }

  .sponsors-decor-dot {
    position: absolute;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    border: 1px solid rgba(0, 56, 118, 0.04);
  }

  .sponsors-decor-dot-1 {
    top: -50px;
    right: -50px;
  }

  .sponsors-decor-dot-2 {
    bottom: -80px;
    left: -80px;
    width: 300px;
    height: 300px;
  }

  .sponsors-container {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-6);
  }

  .sponsors-header {
    text-align: center;
    margin-bottom: var(--space-12);
    position: relative;
    z-index: 1;
  }

  .sponsors-header-content {
    max-width: 500px;
    margin: 0 auto;
  }

  .sponsors-label {
    display: block;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-secondary);
    margin-bottom: var(--space-2);
  }

  .sponsors-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--color-primary-dark);
    margin-bottom: var(--space-3);
  }

  .sponsors-desc {
    font-size: 1rem;
    color: var(--color-gray-500);
    line-height: 1.6;
  }

  .sponsors-carousel {
    position: relative;
    overflow: hidden;
    margin: 0 calc(-1 * var(--space-6));
    padding: var(--space-6) 0;
    mask-image: linear-gradient(
      to right,
      transparent,
      black 8%,
      black 92%,
      transparent
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 8%,
      black 92%,
      transparent
    );
  }

  .sponsors-track {
    display: flex;
    gap: var(--space-6);
    animation: sponsorScroll 70s linear infinite;
    width: max-content;
  }

  .sponsors-carousel:hover .sponsors-track {
    animation-play-state: paused;
  }

  @keyframes sponsorScroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .sponsor-item {
    flex-shrink: 0;
    width: 180px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f8fafc;
    border-radius: 12px;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .sponsor-item:hover {
    background: #ffffff;
    border-color: var(--color-secondary);
    box-shadow: 0 8px 24px rgba(0, 56, 118, 0.1);
    transform: translateY(-2px);
  }

  .sponsor-logo {
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--color-gray-400);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    transition: color 0.3s ease;
  }

  .sponsor-logo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .sponsor-item:hover .sponsor-logo {
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .patrocinadores {
        padding: var(--space-16) 0;
    }

    .sponsor-item {
        width: 150px;
        height: 85px;
    }

    .sponsors-stats {
        gap: var(--space-5);
    }

    .sponsor-stat-number {
        font-size: 1.5rem;
    }

    .sponsor-stat-label {
        font-size: 0.7rem;
    }

    .sponsor-stat-divider {
        height: 30px;
    }
}

@media (max-width: 480px) {
    .sponsors-header {
        margin-bottom: var(--space-8);
    }

    .sponsors-title {
        font-size: 1.75rem;
    }

    .sponsors-desc {
        font-size: 0.9rem;
    }

    .sponsor-item {
        width: 130px;
        height: 75px;
    }

    .sponsors-track {
        gap: var(--space-4);
    }

    .sponsors-stats {
        gap: var(--space-4);
    }

    .sponsor-stat-number {
        font-size: 1.25rem;
    }

    .sponsors-cta-btn {
        width: 100%;
        justify-content: center;
    }
}

</style>
