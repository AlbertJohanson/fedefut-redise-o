<style>
  .footer {
    position: relative;
    background: linear-gradient(
      180deg,
      var(--color-primary-dark) 0%,
      var(--color-dark) 100%
    );
    color: var(--color-white);
    overflow: hidden;
  }

  .footer-container {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-6);
  }

  /* Footer Background Effects */
  .footer-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    overflow: hidden;
  }

  .footer-gradient {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
      radial-gradient(
        ellipse 80% 50% at 20% 40%,
        rgba(0, 102, 204, 0.15) 0%,
        transparent 50%
      ),
      radial-gradient(
        ellipse 60% 40% at 80% 60%,
        rgba(73, 151, 208, 0.1) 0%,
        transparent 50%
      );
  }

  .footer-pattern {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 60px 60px;
  }

  .footer-glow {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
  }

  .footer-glow-1 {
    width: 400px;
    height: 400px;
    background: var(--color-secondary);
    opacity: 0.08;
    top: -100px;
    left: 10%;
  }

  .footer-glow-2 {
    width: 300px;
    height: 300px;
    background: var(--color-accent);
    opacity: 0.06;
    bottom: 20%;
    right: 5%;
  }

  /* Footer Main Content */
  .footer-main {
    position: relative;
    z-index: 2;
    padding: var(--space-16) 0;
  }

  /* Newsletter Form */
  .footer-newsletter {
    flex-shrink: 0;
  }

  .newsletter-form {
    display: flex;
    gap: var(--space-3);
  }

  .newsletter-input {
    width: 280px;
    padding: var(--space-4) var(--space-5);
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 12px;
    color: var(--color-white);
    font-family: var(--font-body);
    font-size: 0.9375rem;
    transition: all var(--duration-normal) var(--ease-out);
  }

  .newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }

  .newsletter-input:focus {
    outline: none;
    border-color: var(--color-accent);
    background: rgba(255, 255, 255, 0.12);
    box-shadow: 0 0 0 4px rgba(73, 151, 208, 0.15);
  }

  .newsletter-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-6);
    background: linear-gradient(
      135deg,
      var(--color-secondary),
      var(--color-accent)
    );
    border-radius: 12px;
    font-family: var(--font-display);
    font-size: 0.875rem;
    letter-spacing: 0.1em;
    color: var(--color-white);
    white-space: nowrap;
    transition: all var(--duration-normal) var(--ease-out);
    box-shadow: 0 4px 20px rgba(0, 102, 204, 0.3);
  }

  .newsletter-btn svg {
    width: 18px;
    height: 18px;
  }

  .newsletter-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 102, 204, 0.4);
  }

  /* Footer Divider */
  .footer-divider {
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.1),
      transparent
    );
    margin-bottom: var(--space-12);
  }

  /* Footer Grid */
  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 2fr 1.2fr;
    gap: var(--space-12);
  }

  /* Footer Brand Column */
  .footer-brand {
    padding-right: var(--space-4);
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-5);
  }

  .footer-shield {
    width: 120px;
    height: 128px;
  }

  .footer-shield img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .footer-logo-text {
    display: flex;
    flex-direction: column;
  }

  .footer-logo-name {
    font-family: var(--font-display);
    font-size: 1.5rem;
    letter-spacing: 0.1em;
    color: var(--color-white);
    line-height: 1;
  }

  .footer-logo-tagline {
    font-size: 0.625rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-accent);
    margin-top: var(--space-1);
  }

  .footer-description {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.7;
    margin-bottom: var(--space-6);
  }

  /* Footer Social Links */
  .footer-social {
    display: flex;
    gap: var(--space-2);
  }

  .footer-social-link {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.7);
    transition: all var(--duration-normal) var(--ease-out);
  }

  .footer-social-link svg {
    width: 18px;
    height: 18px;
  }

  .footer-social-link:hover {
    background: var(--color-secondary);
    border-color: var(--color-secondary);
    color: var(--color-white);
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(0, 102, 204, 0.3);
  }

  /* Footer Links Group */
  .footer-links-group {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-8);
  }

  .footer-col {
    min-width: 0;
  }

  .footer-title {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-family: var(--font-display);
    font-size: 0.9375rem;
    letter-spacing: 0.1em;
    color: var(--color-white);
    margin-bottom: var(--space-5);
  }

  .footer-title-icon {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .footer-title-icon svg {
    width: 16px;
    height: 16px;
    color: var(--color-accent);
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .footer-links li a {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
    transition: all var(--duration-fast) var(--ease-out);
  }

  .footer-links li a:hover {
    color: var(--color-accent);
    padding-left: var(--space-2);
  }

  /* Footer Contact Column */
  .footer-contact-col {
    min-width: 0;
  }

  .footer-contact-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .footer-contact-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
  }

  .contact-icon {
    width: 36px;
    height: 36px;
    flex-shrink: 0;
    background: rgba(73, 151, 208, 0.15);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contact-icon svg {
    width: 16px;
    height: 16px;
    color: var(--color-accent);
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .contact-label {
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
  }

  .contact-value {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
  }

  /* Footer Affiliates */
  .footer-affiliates {
    padding-top: var(--space-5);
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }

  .affiliates-label {
    display: block;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.4);
    margin-bottom: var(--space-3);
  }

  .affiliates-logos {
    display: flex;
    gap: var(--space-3);
  }

  .affiliate-logo {
    width: 50px;
    height: 50px;
    padding: var(--space-2) var(--space-1);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    font-family: var(--font-display);
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.5);
    transition: all var(--duration-fast) var(--ease-out);
  }

  .affiliate-logo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .affiliate-logo:hover {
    background: rgba(255, 255, 255, 0.1);
    color: var(--color-white);
  }

  /* Footer Bottom */
  .footer-bottom {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: var(--space-5) var(--space-6);
    background: rgba(0, 0, 0, 0.2);
  }

  .footer-bottom-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-4);
  }

  .footer-copyright {
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.4);
  }

